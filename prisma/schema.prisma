generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Students {
    id         Int           @id @default(autoincrement())
    name       String        @unique
    Attendance Attendances[]
}

model Attendances {
    id          Int       @id @default(autoincrement())
    student_id  Int
    attended_at DateTime  @default(now())
    Students    Students? @relation(fields: [student_id], references: [id])
}
